# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
*       /                                       Application.index4
GET  	/mac									Application.index2
GET     /foo								    Application.index3
GET	    /bar									Application.index4
GET		/picture								Application.getPicture
GET     /data									Application.data

*		/test									Application.setupTest
*		/testJSON								Application.testJSON
*		/image									Application.showIt
* 		/inspirations							Application.getInspirations
GET		/ins									Application.inspirednetwork

*      /admin              						module:crud

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}
